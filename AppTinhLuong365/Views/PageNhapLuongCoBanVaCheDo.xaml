<Page x:Class="AppTinhLuong365.Views.PageNhapLuongCoBanVaCheDo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppTinhLuong365.Views"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1042"
      Title="PageNhapLuongCoBanVaCheDo">

    <Grid Background="{DynamicResource #FFFFFF}">
        <StackPanel Margin="0,0,-0.4,0">
            <TextBlock Text="{DynamicResource textDanhSachNhanVien}" FontSize="24" Foreground="{DynamicResource #2E3467}" FontWeight="Bold" Margin="0 20 0 0"/>
            <TextBlock Text="Quản lí nhân viên" FontSize="15" Foreground="{DynamicResource #68798B}" Margin="0 10 0 0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 20 20 0" >
                <Border Margin="0 0 20 0" Background="Transparent" BorderThickness="1" CornerRadius="10" Width="160" Height="40" BorderBrush="{DynamicResource #ebebeb}">
                    <DockPanel>
                        <TextBlock Margin="10 0 0 0"  VerticalAlignment="Center" FontSize="16"  />
                        <DatePicker BorderThickness="0" VerticalAlignment="Center"></DatePicker>
                    </DockPanel>
                </Border>
                <Border Margin="0 0 20 0" Background="Transparent" BorderThickness="1" CornerRadius="10" Width="160" Height="40" BorderBrush="{DynamicResource #ebebeb}">
                    <DockPanel VerticalAlignment="Center">
                        <TextBlock Margin="10 0 0 0" Text="Phòng ban (tất cả phòng ban)" FontSize="16"/>
                        <Path Margin="0 0 10 0" Data="{StaticResource iconSearch}" Fill="{DynamicResource #68798B}" HorizontalAlignment="Right"></Path>
                    </DockPanel>
                </Border>
                <Border Background="Transparent" BorderThickness="1" CornerRadius="10" Width="160" Height="40" BorderBrush="{DynamicResource #ebebeb}" Margin="0 0 20 0">
                    <DockPanel VerticalAlignment="Center" >
                        <TextBlock Margin="10 0 0 0" Text="Tất cả nhân viên" FontSize="16"/>
                        <Path Margin="0 0 10 0" Data="{StaticResource iconSearch}" Fill="{DynamicResource #68798B}" HorizontalAlignment="Right" VerticalAlignment="Center"></Path>
                    </DockPanel>
                </Border>
                <Border Width="105" Height="40" Background="{DynamicResource #4C5BD4}" CornerRadius="10">
                    <TextBlock Text="Thống kê" VerticalAlignment="Center" Margin="10" FontSize="16" Foreground="{DynamicResource #FFFFFF}" HorizontalAlignment="Center" />
                </Border>
            </StackPanel>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 40 20 0 " >
                <Border Width="150" Height="40" Background="{DynamicResource #4C5BD4}" CornerRadius="10" Margin="0 0 20 0">
                    <TextBlock Text="Biến động lương" VerticalAlignment="Center" Margin="10" FontSize="16" Foreground="{DynamicResource #FFFFFF}" HorizontalAlignment="Center" />
                </Border>
                <Border Width="150" Height="40" Background="{DynamicResource #4C5BD4}" CornerRadius="10" Margin="0 0 20 0">
                    <TextBlock Text="Nhập lương cơ bản" VerticalAlignment="Center" Margin="10" FontSize="16" Foreground="{DynamicResource #FFFFFF}" HorizontalAlignment="Center" />
                </Border>
                <Border Width="150" Height="40" Background="{DynamicResource #4C5BD4}" CornerRadius="10">
                    <TextBlock Text="Xuất lương cơ bản" VerticalAlignment="Center" Margin="10" FontSize="16" Foreground="{DynamicResource #FFFFFF}" HorizontalAlignment="Center" />
                </Border>
			
            </StackPanel>
                
                <DataGrid Style="{StaticResource DataGrid1}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="{DynamicResource textHoTen}">
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="{DynamicResource textBasicSalary}">
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="{DynamicResource textHopDongApDung}">
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Phòng ban">
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Chức vụ">
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="Liên hệ">
                    </DataGridTextColumn>
					 
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
