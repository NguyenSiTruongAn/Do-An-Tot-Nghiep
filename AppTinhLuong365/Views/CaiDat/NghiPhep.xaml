<Page x:Class="AppTinhLuong365.Views.CaiDat.NghiPhep"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:core="clr-namespace:AppTinhLuong365.Core"
      xmlns:tool="clr-namespace:AppTinhLuong365.Resouce.tool"
      xmlns:local="clr-namespace:AppTinhLuong365.Views.CaiDat"
      mc:Ignorable="d" Loaded="NghiPhep_OnLoaded"
      Title="NghiPhep" SizeChanged="Page_SizeChanged">

    <Page.Resources>
        <core:MathConvert x:Key="math"></core:MathConvert>
        <Style x:Key="Style_Border_Wrap1" TargetType="{x:Type Border}">
            <Setter Property="Width"
                    Value="{Binding Path=ActualWidth, ElementName=Wrap_Border1,Converter= {StaticResource math}, ConverterParameter=(@VALUE/2)-20}" />
            <Setter Property="Margin" Value="10 10 10 10" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSmallSize}" Value="2">
                    <Setter Property="Width"
                            Value="{Binding Path=ActualWidth, ElementName=Wrap_Border1,Converter={StaticResource math}, ConverterParameter=(@VALUE)-20}" />
                    <Setter Property="Margin" Value="10 10" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="Style_Border_Wrap" TargetType="{x:Type Border}">
            <Setter Property="Width"
                    Value="{Binding Path=ActualWidth, ElementName=Wrap_Border,Converter= {StaticResource math}, ConverterParameter=(@VALUE/2)-20}" />
            <Setter Property="Margin" Value="10 10 10 10" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSmallSize}" Value="2">
                    <Setter Property="Width"
                            Value="{Binding Path=ActualWidth, ElementName=Wrap_Border,Converter={StaticResource math}, ConverterParameter=(@VALUE)-20}" />
                    <Setter Property="Margin" Value="10 10" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="Style_Border_Wrap2" TargetType="{x:Type Border}">
            <Setter Property="Width"
                    Value="{Binding Path=ActualWidth, ElementName=Wrap_Border2,Converter= {StaticResource math}, ConverterParameter=(@VALUE/2)-20}" />
            <Setter Property="Margin" Value="10 10 10 10" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSmallSize}" Value="1">
                    <Setter Property="Width"
                            Value="{Binding Path=ActualWidth, ElementName=Wrap_Border2,Converter={StaticResource math}, ConverterParameter=(@VALUE)-20}" />
                    <Setter Property="Margin" Value="10 10" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsSmallSize}" Value="2">
                    <Setter Property="Width"
                            Value="{Binding Path=ActualWidth, ElementName=Wrap_Border2,Converter={StaticResource math}, ConverterParameter=(@VALUE)-20}" />
                    <Setter Property="Margin" Value="10 10" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="Style_Border_Wrap3" TargetType="{x:Type Border}">
            <Setter Property="Width"
                    Value="{Binding Path=ActualWidth, ElementName=Wrap_Border3,Converter= {StaticResource math}, ConverterParameter=(@VALUE/3)-20}" />
            <Setter Property="Margin" Value="10 10 10 10" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSmallSize}" Value="2">
                    <Setter Property="Width"
                            Value="{Binding Path=ActualWidth, ElementName=Wrap_Border3,Converter={StaticResource math}, ConverterParameter=(@VALUE)-20}" />
                    <Setter Property="Margin" Value="10 10" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="Style_Border_Wrap4" TargetType="{x:Type Border}">
            <Setter Property="Width"
                    Value="{Binding Path=ActualWidth, ElementName=Wrap_Border4,Converter= {StaticResource math}, ConverterParameter=(@VALUE/2)}" />
            <Setter Property="Margin" Value="0 10 0 10" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSmallSize}" Value="2">
                    <Setter Property="Width"
                            Value="{Binding Path=ActualWidth, ElementName=Wrap_Border4,Converter={StaticResource math}, ConverterParameter=(@VALUE/2)}" />
                    <Setter Property="Margin" Value="0 10" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="Style_Border_Wrap5" TargetType="{x:Type Border}">
            <Setter Property="Width"
                    Value="{Binding Path=ActualWidth, ElementName=Wrap_Border5,Converter= {StaticResource math}, ConverterParameter=(@VALUE/2)}" />
            <Setter Property="Margin" Value="0 10 0 10" />
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSmallSize}" Value="2">
                    <Setter Property="Width"
                            Value="{Binding Path=ActualWidth, ElementName=Wrap_Border5,Converter={StaticResource math}, ConverterParameter=(@VALUE/2)}" />
                    <Setter Property="Margin" Value="0 10" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid Background="{DynamicResource #F7F8FC}">
        <StackPanel Margin="20">
            <TabControl BorderThickness="0" Name="Control" Background="{DynamicResource #F7F8FC}"
                        ItemContainerStyle="{StaticResource TabItem1}">
                <TabItem Cursor="Hand" Header="{DynamicResource textChinhSachNghiPhep}">
                    <Grid Cursor="Arrow" Background="{DynamicResource #F7F8FC}">
                        <StackPanel Orientation="Horizontal" Margin="10 30 0 0" HorizontalAlignment="Left"
                                    VerticalAlignment="Top" Grid.ColumnSpan="3">
                            <Grid HorizontalAlignment="Left" Width="330">
                                <Border Background="{DynamicResource #FFFFFF}" CornerRadius="10">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Opacity="0.4"></DropShadowEffect>
                                    </Border.Effect>
                                </Border>
                                <Border Background="{DynamicResource #FFFFFF}" CornerRadius="10">
                                    <StackPanel Orientation="Vertical" Margin="10 0 10 20" VerticalAlignment="Top">
                                        <Border BorderBrush="{DynamicResource #474747}" BorderThickness="0" Height="61"
                                                Margin="0 10 0 0">
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="Nghỉ phép có lương" FontSize="16"
                                                           VerticalAlignment="Center"
                                                           Foreground="{DynamicResource #4C5BD4}" FontWeight="DemiBold">
                                                </TextBlock>
                                                <Line X1="0" Y1="10" X2="330" Y2="10"
                                                      Stroke="{DynamicResource #474747}" StrokeThickness="1"
                                                      StrokeDashArray="4 1" />
                                            </StackPanel>
                                        </Border>
                                        <StackPanel Orientation="Horizontal">
                                            <Path Data="{DynamicResource iconBut}" Fill="{DynamicResource #5F648D}"></Path>
                                            <TextBlock FontWeight="DemiBold" Padding="5 0 0 0" Text="Miêu tả"
                                                       FontSize="14" Foreground="{DynamicResource #5F648D}"
                                                       Margin="0 0 0 5">
                                            </TextBlock>
                                        </StackPanel>
                                        <TextBlock Margin="20 10" FontSize="15" FontWeight="DemiBold"
                                                   Foreground="{DynamicResource #68798B}"
                                                   Text="Là nghỉ phép trong 1 số trường hợp đặc biệt được quy định trong bộ luật lao..."
                                                   TextWrapping="WrapWithOverflow">
                                        </TextBlock>
                                        <TextBlock Cursor="Hand" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown"
                                                   Text="(Xem thêm)" FontSize="16" FontWeight="DemiBold"
                                                   Foreground="{DynamicResource #4C5BD4}">
                                        </TextBlock>
                                    </StackPanel>

                                </Border>
                            </Grid>
                            <Grid HorizontalAlignment="Left" Width="330" Margin="20 0 0 0">
                                <Border Background="{DynamicResource #FFFFFF}" CornerRadius="10">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Opacity="0.4"></DropShadowEffect>
                                    </Border.Effect>
                                </Border>
                                <Border Background="{DynamicResource #FFFFFF}" CornerRadius="10">
                                    <StackPanel Orientation="Vertical" Margin="10 0 10 20" VerticalAlignment="Top">
                                        <Border BorderBrush="{DynamicResource #474747}" BorderThickness="0" Height="61"
                                                Margin="0 10 0 0">
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="Nghỉ phép không lương" FontSize="16"
                                                           VerticalAlignment="Center"
                                                           Foreground="{DynamicResource #4C5BD4}" FontWeight="DemiBold">
                                                </TextBlock>
                                                <Line X1="0" Y1="10" X2="330" Y2="10"
                                                      Stroke="{DynamicResource #474747}" StrokeThickness="1"
                                                      StrokeDashArray="4 1" />
                                            </StackPanel>
                                        </Border>
                                        <StackPanel Orientation="Horizontal">
                                            <Path Data="{DynamicResource iconBut}" Fill="{DynamicResource #5F648D}"></Path>
                                            <TextBlock FontWeight="DemiBold" Padding="5 0 0 0" Text="Miêu tả"
                                                       FontSize="14" Foreground="{DynamicResource #5F648D}"
                                                       Margin="0 0 0 5">
                                            </TextBlock>
                                        </StackPanel>
                                        <TextBlock Margin="20 10" FontSize="15" FontWeight="DemiBold"
                                                   Foreground="{DynamicResource #68798B}"
                                                   Text="Là nghỉ phép có xin phép theo đúng quy định của doanh nghiệp, khi người lao..."
                                                   TextWrapping="WrapWithOverflow">
                                        </TextBlock>
                                        <TextBlock Cursor="Hand" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown_1"
                                                   Text="(Xem thêm)" FontSize="16" FontWeight="DemiBold"
                                                   Foreground="{DynamicResource #4C5BD4}">
                                        </TextBlock>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Cursor="Hand" Header="{DynamicResource textNghiSaiQuyDinh}">
                    <DockPanel Cursor="Arrow" Margin="20">
                        <Border Background="{DynamicResource #FFFFFF}" CornerRadius="7">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="16" Opacity="0.1"></DropShadowEffect>
                            </Border.Effect>
                        </Border>
                        <Border Background="{DynamicResource #FFFFFF}" CornerRadius="7">
                            <StackPanel Margin="20">
                                <WrapPanel x:Name="Wrap_Border">
                                    <Border Style="{DynamicResource Style_Border_Wrap}">
                                        <StackPanel>
                                            <TextBlock Text="{DynamicResource textNghiSaiQuyDinh}" FontSize="24"
                                                       FontWeight="Bold" Foreground="{DynamicResource #2E3467}">
                                            </TextBlock>
                                            <TextBlock TextWrapping="WrapWithOverflow"
                                                       Text="Nghỉ không có đơn xin phép hoặc có đơn xin phép nhưng bị sếp &quot;hủy đơn&quot;"
                                                       FontStyle="Italic" Foreground="{DynamicResource #000}"
                                                       FontWeight="DemiBold">
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                    <Border Style="{DynamicResource Style_Border_Wrap}" Height="38"
                                            Background="{DynamicResource #FFFFFF}">
                                        <Border Width="161" HorizontalAlignment="Right" BorderThickness="1"
                                                CornerRadius="10" BorderBrush="{DynamicResource #ebebeb}">
                                            <tool:DatePicker x:Name="DatePickerDay"
                                                             Foreground="{DynamicResource #68798B}"
                                                             Background="{DynamicResource #FFFFFF}" Margin="3"
                                                             SelectionChange="Date" />
                                        </Border>
                                    </Border>
                                </WrapPanel>
                                <Border Cursor="Hand" Margin="0 20 0 0" Width="147" Height="35.5"
                                        Background="{DynamicResource #4C5BD4}" HorizontalAlignment="Right"
                                        CornerRadius="8" MouseLeftButtonDown="OpenDes">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Visible"></Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=borderes,Path=Visibility}"
                                                             Value="Visible">
                                                    <Setter Property="Visibility" Value="Visible"></Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                               FontWeight="DemiBold" FontSize="16"
                                               Foreground="{DynamicResource #FFFFFF}" Text="Cài đặt mức phạt">
                                    </TextBlock>
                                </Border>
                                <Border x:Name="borderes" Visibility="Collapsed" Margin="0 20 0 0" Height="390"
                                        BorderThickness="1" BorderBrush="{DynamicResource #e1e1e1}">
                                    <WrapPanel x:Name="Wrap_Border4" Margin="20">
                                        <Border Style="{DynamicResource Style_Border_Wrap4}" CornerRadius="5"
                                                BorderThickness="1" BorderBrush="{DynamicResource #e1e1e1}">
                                            <ScrollViewer>
                                                <ListView PreviewMouseWheel="ListView_OnPreviewMouseWheel" Margin="10 20" BorderThickness="0"
                                                          ItemsSource="{Binding listShift}">
                                                    <ListView.ItemContainerStyle>
                                                        <Style TargetType="ListViewItem">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="ListViewItem">
                                                                        <Border Margin="5 0 0 0">
                                                                            <StackPanel Margin="0 15"
                                                                                Orientation="Horizontal">
                                                                                <CheckBox Margin="5 0 0 0"
                                                                                    Unchecked="HuyChon"
                                                                                    Checked="ChonNhanvien">
                                                                                </CheckBox>
                                                                                <StackPanel Margin="20 0 0 0">
                                                                                    <TextBlock FontSize="15"
                                                                                        Foreground="{DynamicResource #4C5BD4}"
                                                                                        FontWeight="DemiBold"
                                                                                        Text="{Binding shift_name}">
                                                                                    </TextBlock>
                                                                                    <TextBlock FontSize="15"
                                                                                        FontWeight="DemiBold"
                                                                                        Foreground="{DynamicResource #666666}">
                                                                                        <Run Text="Từ" />
                                                                                        <Run
                                                                                            Text="{Binding start_time}" />
                                                                                        <Run Text="-" />
                                                                                        <Run Text="{Binding end_time}" />
                                                                                    </TextBlock>
                                                                                </StackPanel>
                                                                            </StackPanel>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </ListView.ItemContainerStyle>
                                                </ListView>
                                            </ScrollViewer>
                                        </Border>
                                        <Border Style="{DynamicResource Style_Border_Wrap4}">
                                            <StackPanel Margin="72 0 0 0">
                                                <TextBlock TextWrapping="Wrap" Text="{DynamicResource textNMTP}"
                                                           Foreground="{DynamicResource #666666}" FontSize="16" />
                                                <Border Margin="0 5 0 0" Height="41" CornerRadius="3"
                                                        BorderThickness="1" BorderBrush="{DynamicResource #DDDDDD}">
                                                    <Grid Height="38" Margin="10 0 10 0">
                                                        <TextBox PreviewTextInput="Txt_PreviewCurrencyTextInput"
                                                                 DataObject.Pasting="TextBoxPasting"
                                                                 FontWeight="DemiBold" VerticalAlignment="Center"
                                                                 x:Name="tbInput" TextWrapping="Wrap" FontSize="16"
                                                                 Foreground="{DynamicResource #777777}"
                                                                 BorderThickness="0" />
                                                        <TextBlock FontWeight="DemiBold" VerticalAlignment="Center"
                                                                   FontSize="16" Foreground="{DynamicResource #777777}"
                                                                   TextWrapping="Wrap"
                                                                   Text="{DynamicResource textNSTP}"
                                                                   IsHitTestVisible="False">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed" />
                                                                    <Style.Triggers>
                                                                        <DataTrigger
                                                                            Binding="{Binding ElementName=tbInput,Path=Text}"
                                                                            Value="">
                                                                            <Setter Property="Visibility"
                                                                                Value="Visible" />
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Grid>
                                                </Border>
                                                <TextBlock TextWrapping="Wrap" Margin="0 10 0 0"
                                                           Text="{DynamicResource textCNBDAPMP}"
                                                           Foreground="{DynamicResource #666666}" FontSize="16" />
                                                <Border Margin="0 5 0 0" Height="43" CornerRadius="3"
                                                        BorderThickness="1" BorderBrush="{DynamicResource #DDDDDD}">
                                                    <tool:DatePicker x:Name="DatePicker" FontSize="16"
                                                                     Foreground="{DynamicResource #777777}" />
                                                </Border>
                                                <Border MouseLeftButtonDown="ApDung" Height="45"
                                                        Background="{DynamicResource #4C5BD4}"
                                                        CornerRadius="5" Margin="0 15 0 0">
                                                    <TextBlock Text="{DynamicResource textApDung}"
                                                               Foreground="{DynamicResource #FFFFFF}"
                                                               VerticalAlignment="Center" HorizontalAlignment="Center"
                                                               FontSize="15" />
                                                </Border>
                                                <TextBlock FontSize="16" Foreground="Black" Margin="0 20 0 0"
                                                           TextWrapping="WrapWithOverflow"
                                                           Text="Lưu ý: Mức phạt sẽ được áp dụng từ ngày được chọn, điều này có thể ảnh hưởng đến kết quả tính lương của các tháng trước. Vui lòng chắc chắn về mốc thời gian áp dụng mức phạt." />
                                            </StackPanel>
                                        </Border>
                                    </WrapPanel>
                                </Border>
                                <DataGrid PreviewMouseWheel="DataGrid_OnPreviewMouseWheel" x:Name="dataGrid"
                                          ItemsSource="{Binding list}"
                                          Style="{StaticResource DataGrid1}" SelectedIndex="0" Margin="0 30 0 0">
                                    <DataGrid.OpacityMask>
                                        <VisualBrush>
                                            <VisualBrush.Visual>
                                                <Border Width="{Binding ElementName=dataGrid,Path=ActualWidth}"
                                                        Height="{Binding ElementName=dataGrid,Path=ActualHeight}"
                                                        CornerRadius="10" Background="White">
                                                </Border>
                                            </VisualBrush.Visual>
                                        </VisualBrush>
                                    </DataGrid.OpacityMask>
                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn Header="{DynamicResource textCaLamViec}" MinWidth="200">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border Background="Transparent" HorizontalAlignment="Left">
                                                        <StackPanel Margin="15 0 30 0" VerticalAlignment="Center"
                                                                    HorizontalAlignment="Left">
                                                            <TextBlock FontSize="15"
                                                                       Foreground="{DynamicResource #4C5BD4}"
                                                                       FontWeight="DemiBold"
                                                                       Text="{Binding shift_name}">
                                                            </TextBlock>
                                                            <TextBlock FontSize="15" FontWeight="DemiBold">
                                                                <Run Text="Từ" />
                                                                <Run Text="{Binding start_time}" />
                                                                <Run Text="-" />
                                                                <Run Text="{Binding end_time}" />
                                                            </TextBlock>
                                                        </StackPanel>
                                                    </Border>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="{DynamicResource textMucPhatDangApDung}" MinWidth="300">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border Background="Transparent">
                                                        <TextBlock FontSize="15" FontWeight="DemiBold"
                                                                   Style="{StaticResource TextRowCenter}">
                                                            <Run Text="{Binding display_pm_monney, Mode=OneWay}" />
                                                            <Run Text="VNĐ/ca" />
                                                        </TextBlock>
                                                    </Border>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="{DynamicResource textNgayBatDauApDung}" MinWidth="300">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border Background="Transparent">
                                                        <TextBlock FontSize="15" FontWeight="DemiBold"
                                                                   Foreground="{DynamicResource #4C5BD4}"
                                                                   Text="{Binding pc_time}"
                                                                   Style="{StaticResource TextRowCenter}">
                                                        </TextBlock>
                                                    </Border>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTemplateColumn Header="">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border Cursor="Hand" Background="Transparent"
                                                            MouseLeftButtonDown="Border_MouseLeftButtonDown" Margin="50 0 0 0">
                                                        <TextBlock FontSize="15" FontWeight="DemiBold"
                                                                   Text="Xem mức phạt"
                                                                   Style="{StaticResource TextRowCenter}"
                                                                   TextDecorations="Underline">
                                                        </TextBlock>
                                                    </Border>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                    </DockPanel>
                </TabItem>
                <TabItem Cursor="Hand" Header="{DynamicResource textNghiNgayKhongDuocNghi}">
                    <DockPanel Cursor="Arrow" Margin="20">
                        <Border Background="{DynamicResource #FFFFFF}" CornerRadius="7">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="16" Opacity="0.1"></DropShadowEffect>
                            </Border.Effect>
                        </Border>
                        <Border Background="{DynamicResource #FFFFFF}" CornerRadius="7">
                            <StackPanel Margin="20">
                                <WrapPanel x:Name="Wrap_Border1">
                                    <Border Style="{DynamicResource Style_Border_Wrap1}">
                                        <StackPanel>
                                            <TextBlock Text="{DynamicResource textNghiSaiQuyDinh}" FontSize="24"
                                                       FontWeight="Bold" Foreground="{DynamicResource #2E3467}">
                                            </TextBlock>
                                            <TextBlock TextWrapping="WrapWithOverflow" HorizontalAlignment="Left"
                                                       Text="Là trường hợp nhân viên có đơn xin nghỉ phép nhưng sếp không duyệt và lệnh nhân viên không được nghỉ những ngày đó bắt buộc phải đi làm vì các ngày đó công ty có việc trọng đại như ngày hoàn thành dự án, ngày đối ngoại của công ty… Trường hợp này nhân viên bắt buộc phải đi làm nếu cố ý nghỉ sẽ ảnh hưởng nghiêm trọng đến hoạt động của công ty."
                                                       FontStyle="Italic" Foreground="{DynamicResource #000}"
                                                       FontWeight="DemiBold">
                                            </TextBlock>
                                        </StackPanel>
                                    </Border>
                                    <Border Style="{DynamicResource Style_Border_Wrap1}" Height="38"
                                            Background="{DynamicResource #FFFFFF}">
                                        <Border Width="161" HorizontalAlignment="Right" BorderThickness="1"
                                                CornerRadius="10" BorderBrush="{DynamicResource #ebebeb}">
                                            <tool:DatePicker x:Name="DatePickerNew" SelectionChange="Select"
                                                             Foreground="{DynamicResource #68798B}"
                                                             Background="{DynamicResource #FFFFFF}" Margin="3" />
                                        </Border>
                                    </Border>
                                </WrapPanel>
                                <Border Cursor="Hand" Margin="0 20 0 0" Width="147" Height="35.5"
                                        Background="{DynamicResource #4C5BD4}" HorizontalAlignment="Right"
                                        CornerRadius="8" MouseLeftButtonDown="OpenDes1">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Visible"></Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=borderes1,Path=Visibility}"
                                                             Value="Visible">
                                                    <Setter Property="Visibility" Value="Visible"></Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                                               FontWeight="DemiBold" FontSize="16"
                                               Foreground="{DynamicResource #FFFFFF}" Text="Cài đặt mức phạt">
                                    </TextBlock>
                                </Border>
                                <Border x:Name="borderes1" Visibility="Collapsed" Margin="0 20 0 0" Height="390"
                                        BorderThickness="1" BorderBrush="{DynamicResource #e1e1e1}">
                                    <WrapPanel x:Name="Wrap_Border5" Margin="20">
                                        <Border Style="{DynamicResource Style_Border_Wrap5}" CornerRadius="5"
                                                BorderThickness="1" BorderBrush="{DynamicResource #e1e1e1}">
                                            <ScrollViewer>
                                                <ListView PreviewMouseWheel="ListView_OnPreviewMouseWheel" Margin="10 20" BorderThickness="0"
                                                          ItemsSource="{Binding listShift}">
                                                    <ListView.ItemContainerStyle>
                                                        <Style TargetType="ListViewItem">
                                                            <Setter Property="Template">
                                                                <Setter.Value>
                                                                    <ControlTemplate TargetType="ListViewItem">
                                                                        <Border Margin="5 0 0 0">
                                                                            <StackPanel Margin="0 15"
                                                                                Orientation="Horizontal">
                                                                                <CheckBox Margin="5 0 0 0"
                                                                                    Unchecked="HuyChon"
                                                                                    Checked="ChonNhanvien">
                                                                                </CheckBox>
                                                                                <StackPanel Margin="20 0 0 0">
                                                                                    <TextBlock FontSize="15"
                                                                                        Foreground="{DynamicResource #4C5BD4}"
                                                                                        FontWeight="DemiBold"
                                                                                        Text="{Binding shift_name}">
                                                                                    </TextBlock>
                                                                                    <TextBlock FontSize="15"
                                                                                        FontWeight="DemiBold"
                                                                                        Foreground="{DynamicResource #666666}">
                                                                                        <Run Text="Từ" />
                                                                                        <Run
                                                                                            Text="{Binding start_time}" />
                                                                                        <Run Text="-" />
                                                                                        <Run Text="{Binding end_time}" />
                                                                                    </TextBlock>
                                                                                </StackPanel>
                                                                            </StackPanel>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </Setter.Value>
                                                            </Setter>
                                                        </Style>
                                                    </ListView.ItemContainerStyle>
