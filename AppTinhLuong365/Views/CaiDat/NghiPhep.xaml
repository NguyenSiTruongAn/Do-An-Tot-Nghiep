                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="16" Opacity="0.1"></DropShadowEffect>
                            </Border.Effect>
                        </Border>
                        <Border Background="{DynamicResource #FFFFFF}" CornerRadius="7">
                            <StackPanel Margin="20">
                                <WrapPanel x:Name="Wrap_Border">
                                    <Border Style="{DynamicResource Style_Border_Wrap}">
                                        <StackPanel>
                                            <TextBlock Text="{DynamicResource textNghiSaiQuyDinh}" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource #2E3467}"></TextBlock>
                                            <TextBlock TextWrapping="WrapWithOverflow" Text="Nghỉ không có đơn xin phép hoặc có đơn xon phép nhưng bị sếp &quot;hủy đơn&quot;" FontStyle="Italic" Foreground="{DynamicResource #000}" FontWeight="DemiBold"></TextBlock>
                                        </StackPanel>
                                    </Border>
                                    <Border Style="{DynamicResource Style_Border_Wrap}" Height="38" Background="{DynamicResource #FFFFFF}">
                                        <Border Width="161" HorizontalAlignment="Right" BorderThickness="1" CornerRadius="10" BorderBrush="{DynamicResource #ebebeb}">
                                            <tool:DatePicker Foreground="{DynamicResource #68798B}" Background="{DynamicResource #FFFFFF}" Margin="3"/>
                                        </Border>
                                    </Border>
                                </WrapPanel>
                                <Border Margin="0 20 0 0" Width="147" Height="35.5" Background="{DynamicResource #4C5BD4}" HorizontalAlignment="Right" CornerRadius="8" MouseLeftButtonDown="OpenDes">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Visible"></Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=borderes,Path=Visibility}" Value="Visible">
                                                    <Setter Property="Visibility" Value="Visible"></Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold" FontSize="16" Foreground="{DynamicResource #FFFFFF}" Text="Cài đặt mức phạt"></TextBlock>
                                </Border>
                                <Border x:Name="borderes" Visibility="Collapsed" Margin="0 20 0 0" Height="390" BorderThickness="1" BorderBrush="{DynamicResource #e1e1e1}">
                                    <WrapPanel x:Name="Wrap_Border4" Margin="20">
                                        <Border Style="{DynamicResource Style_Border_Wrap4}" CornerRadius="5" BorderThickness="1" BorderBrush="{DynamicResource #e1e1e1}">
                                            <ScrollViewer>
                                            </ScrollViewer>
                                        </Border>
                                        <Border Style="{DynamicResource Style_Border_Wrap4}">
                                            <StackPanel Margin="72 0 0 0">
                                                <TextBlock TextWrapping="Wrap" Text="{DynamicResource textNMTP}" Foreground="{DynamicResource #666666}" FontSize="16"/>
                                                <Border Margin="0 5 0 0" Height="41" CornerRadius="3" BorderThickness="1" BorderBrush="{DynamicResource #DDDDDD}">
                                                    <Grid Height="38" Margin="10 0 10 0">
                                                        <TextBox FontWeight="DemiBold" VerticalAlignment="Center" x:Name="tbInput" TextWrapping="Wrap" FontSize="16" Foreground="{DynamicResource #777777}" BorderThickness="0"/>
                                                        <TextBlock FontWeight="DemiBold" VerticalAlignment="Center" FontSize="16" Foreground="{DynamicResource #777777}" TextWrapping="Wrap" Text="{DynamicResource textNSTP}" IsHitTestVisible="False">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding ElementName=tbInput,Path=Text}" Value="">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Grid>
                                                </Border>
                                                <TextBlock TextWrapping="Wrap" Margin="0 10 0 0" Text="{DynamicResource textCNBDAPMP}" Foreground="{DynamicResource #666666}" FontSize="16"/>
                                                <Border Margin="0 5 0 0" Height="43" CornerRadius="3" BorderThickness="1" BorderBrush="{DynamicResource #DDDDDD}">
                                                    <tool:DatePicker FontSize="16" Foreground="{DynamicResource #777777}"/>
                                                </Border>
                                                <Border Height="45" Background="{DynamicResource #4C5BD4}" CornerRadius="5" Margin="0 15 0 0">
                                                    <TextBlock Text="{DynamicResource textApDung}" Foreground="{DynamicResource #FFFFFF}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15"/>
                                                </Border>
                                                <TextBlock FontSize="16" Foreground="Black" Margin="0 20 0 0" TextWrapping="WrapWithOverflow" Text="Lưu ý: Mức phạt sẽ được áp dụng từ ngày được chọn, điều này có thể ảnh hưởng đến kết quả tính lương của các tháng trước. Vui lòng chắc chắn về mốc thời gian áp dụng mức phạt."/>
                                            </StackPanel>
                                        </Border>
                                    </WrapPanel>
                                </Border>
                                <DataGrid Style="{StaticResource DataGrid1}" Margin="0 30 0 0">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="{DynamicResource textCaLamViec}"></DataGridTextColumn>
                                        <DataGridTextColumn Header="{DynamicResource textMucPhatDangApDung}"></DataGridTextColumn>
                                        <DataGridTextColumn Header="{DynamicResource textNgayBatDauApDung}"></DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </StackPanel>
                        </Border>
                    </DockPanel>
                </TabItem>
                <TabItem Header="{DynamicResource textNghiNgayKhongDuocNghi}">
                    <DockPanel Margin="20">
                        <Border Background="{DynamicResource #FFFFFF}" CornerRadius="7">
                            <Border.Effect>
                                <DropShadowEffect ShadowDepth="0" BlurRadius="16" Opacity="0.1"></DropShadowEffect>
                            </Border.Effect>
                        </Border>
                        <Border Background="{DynamicResource #FFFFFF}" CornerRadius="7">
                            <StackPanel Margin="20">
                                <WrapPanel x:Name="Wrap_Border1">
                                    <Border Style="{DynamicResource Style_Border_Wrap1}">
                                        <StackPanel>
                                            <TextBlock Text="{DynamicResource textNghiSaiQuyDinh}" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource #2E3467}"></TextBlock>
                                            <TextBlock TextWrapping="WrapWithOverflow" HorizontalAlignment="Left" Text="Là trường hợp nhân viên có đơn xin nghỉ phép nhưng sếp không duyệt và lệnh nhân viên không được nghỉ những ngày đó bắt buộc phải đi làm vì các ngày đó công ty có việc trọng đại như ngày hoàn thành dự án, ngày đối ngoại của công ty… Trường hợp này nhân viên bắt buộc phải đi làm nếu cố ý nghỉ sẽ ảnh hưởng nghiêm trọng đến hoạt động của công ty." FontStyle="Italic" Foreground="{DynamicResource #000}" FontWeight="DemiBold"></TextBlock>
                                        </StackPanel>
                                    </Border>
                                    <Border Style="{DynamicResource Style_Border_Wrap1}" Height="38" Background="{DynamicResource #FFFFFF}">
                                        <Border Width="161" HorizontalAlignment="Right" BorderThickness="1" CornerRadius="10" BorderBrush="{DynamicResource #ebebeb}">
                                            <tool:DatePicker Foreground="{DynamicResource #68798B}" Background="{DynamicResource #FFFFFF}" Margin="3"/>
                                        </Border>
                                    </Border>
                                </WrapPanel>
                                <Border Margin="0 20 0 0" Width="147" Height="35.5" Background="{DynamicResource #4C5BD4}" HorizontalAlignment="Right" CornerRadius="8" MouseLeftButtonDown="OpenDes1">
                                    <Border.Style>
                                        <Style TargetType="Border">
                                            <Setter Property="Visibility" Value="Visible"></Setter>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding ElementName=borderes1,Path=Visibility}" Value="Visible">
                                                    <Setter Property="Visibility" Value="Visible"></Setter>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="DemiBold" FontSize="16" Foreground="{DynamicResource #FFFFFF}" Text="Cài đặt mức phạt"></TextBlock>
                                </Border>
                                <Border x:Name="borderes1" Visibility="Collapsed" Margin="0 20 0 0" Height="390" BorderThickness="1" BorderBrush="{DynamicResource #e1e1e1}">
                                    <WrapPanel x:Name="Wrap_Border5" Margin="20">
                                        <Border Style="{DynamicResource Style_Border_Wrap5}" CornerRadius="5" BorderThickness="1" BorderBrush="{DynamicResource #e1e1e1}">
                                            <ScrollViewer>
                                            </ScrollViewer>
                                        </Border>
                                        <Border Style="{DynamicResource Style_Border_Wrap5}">
                                            <StackPanel Margin="72 0 0 0">
                                                <TextBlock TextWrapping="Wrap" Text="{DynamicResource textNMTP}" Foreground="{DynamicResource #666666}" FontSize="16"/>
                                                <Border Margin="0 5 0 0" Height="41" CornerRadius="3" BorderThickness="1" BorderBrush="{DynamicResource #DDDDDD}">
                                                    <Grid Height="38" Margin="10 0 10 0">
                                                        <TextBox FontWeight="DemiBold" VerticalAlignment="Center" x:Name="tbInput1" TextWrapping="Wrap" FontSize="16" Foreground="{DynamicResource #777777}" BorderThickness="0"/>
                                                        <TextBlock FontWeight="DemiBold" VerticalAlignment="Center" FontSize="16" Foreground="{DynamicResource #777777}" TextWrapping="Wrap" Text="{DynamicResource textNSTP}" IsHitTestVisible="False">
                                                            <TextBlock.Style>
                                                                <Style TargetType="TextBlock">
                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding ElementName=tbInput1,Path=Text}" Value="">
                                                                            <Setter Property="Visibility" Value="Visible"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </TextBlock.Style>
                                                        </TextBlock>
                                                    </Grid>
                                                </Border>
                                                <TextBlock TextWrapping="Wrap" Margin="0 10 0 0" Text="{DynamicResource textCNBDAPMP}" Foreground="{DynamicResource #666666}" FontSize="16"/>
                                                <Border Margin="0 5 0 0" Height="43" CornerRadius="3" BorderThickness="1" BorderBrush="{DynamicResource #DDDDDD}">
                                                    <tool:DatePicker FontSize="16" Foreground="{DynamicResource #777777}"/>
                                                </Border>
                                                <Border Height="45" Background="{DynamicResource #4C5BD4}" CornerRadius="5" Margin="0 15 0 0">
                                                    <TextBlock Text="{DynamicResource textApDung}" Foreground="{DynamicResource #FFFFFF}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15"/>
                                                </Border>
                                                <TextBlock FontSize="16" Foreground="Black" Margin="0 20 0 0" TextWrapping="WrapWithOverflow" Text="Lưu ý: Mức phạt sẽ được áp dụng từ ngày được chọn, điều này có thể ảnh hưởng đến kết quả tính lương của các tháng trước. Vui lòng chắc chắn về mốc thời gian áp dụng mức phạt."/>
                                            </StackPanel>
                                        </Border>
                                    </WrapPanel>
                                </Border>

