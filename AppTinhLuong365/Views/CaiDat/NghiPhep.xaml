                        <StackPanel Orientation="Horizontal" Margin="10 30 0 0"  HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="3">
                            <Grid HorizontalAlignment="Left" Width="330">
                                <Border Background="{DynamicResource #FFFFFF}" CornerRadius="10">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Opacity="0.4"></DropShadowEffect>
                                    </Border.Effect>
                                </Border>
                                <Border Background="{DynamicResource #FFFFFF}" CornerRadius="10">
                                    <StackPanel Orientation="Vertical" Margin="10 0 10 20" VerticalAlignment="Top">
                                        <Border BorderBrush="{DynamicResource #474747}" BorderThickness="0" Height="61" Margin="0 10 0 0">
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="Nghỉ phép có lương" FontSize="16" VerticalAlignment="Center" Foreground="{DynamicResource #4C5BD4}" FontWeight="DemiBold"></TextBlock>
                                                <Line X1="0" Y1="10" X2="330" Y2="10" Stroke="{DynamicResource #474747}" StrokeThickness="1" StrokeDashArray="4 1" />
                                            </StackPanel>
                                        </Border>
                                        <StackPanel Orientation="Horizontal">
                                            <Path Data="{DynamicResource iconBut}" Fill="{DynamicResource #5F648D}"></Path>
                                            <TextBlock FontWeight="DemiBold" Padding="5 0 0 0" Text="Miêu tả" FontSize="14" Foreground="{DynamicResource #5F648D}" Margin="0 0 0 5"></TextBlock>
                                        </StackPanel>
                                        <TextBlock Margin="20 10" FontSize="15" FontWeight="DemiBold" Foreground="{DynamicResource #68798B}" Text="Là nghỉ phép trong 1 số trường hợp đặc biệt được quy định trong bộ luật lao..." TextWrapping="WrapWithOverflow"></TextBlock>
                                        <TextBlock Text="(Xem thêm)" FontSize="16" FontWeight="DemiBold" Foreground="{DynamicResource #4C5BD4}"></TextBlock>
                                    </StackPanel>

                                </Border>
                            </Grid>
                            <Grid HorizontalAlignment="Left" Width="330" Margin="20 0 0 0">
                                <Border Background="{DynamicResource #FFFFFF}" CornerRadius="10">
                                    <Border.Effect>
                                        <DropShadowEffect ShadowDepth="0" BlurRadius="10" Opacity="0.4"></DropShadowEffect>
                                    </Border.Effect>
                                </Border>
                                <Border Background="{DynamicResource #FFFFFF}" CornerRadius="10">
                                    <StackPanel Orientation="Vertical" Margin="10 0 10 20" VerticalAlignment="Top">
                                        <Border BorderBrush="{DynamicResource #474747}" BorderThickness="0" Height="61" Margin="0 10 0 0">
                                            <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="Nghỉ phép không lương" FontSize="16" VerticalAlignment="Center" Foreground="{DynamicResource #4C5BD4}" FontWeight="DemiBold"></TextBlock>
                                                <Line X1="0" Y1="10" X2="330" Y2="10" Stroke="{DynamicResource #474747}" StrokeThickness="1" StrokeDashArray="4 1" />
                                            </StackPanel>
                                        </Border>
                                        <StackPanel Orientation="Horizontal">
                                            <Path Data="{DynamicResource iconBut}" Fill="{DynamicResource #5F648D}"></Path>
                                            <TextBlock FontWeight="DemiBold" Padding="5 0 0 0" Text="Miêu tả" FontSize="14" Foreground="{DynamicResource #5F648D}" Margin="0 0 0 5"></TextBlock>
                                        </StackPanel>
                                        <TextBlock Margin="20 10" FontSize="15" FontWeight="DemiBold" Foreground="{DynamicResource #68798B}" Text="Là nghỉ phép có xin phép theo đúng quy định của doanh nghiệp, khi người lao..." TextWrapping="WrapWithOverflow"></TextBlock>
                                        <TextBlock Text="(Xem thêm)" FontSize="16" FontWeight="DemiBold" Foreground="{DynamicResource #4C5BD4}"></TextBlock>
                                    </StackPanel>
                                </Border>
                            </Grid>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="{DynamicResource textNghiSaiQuyDinh}">
