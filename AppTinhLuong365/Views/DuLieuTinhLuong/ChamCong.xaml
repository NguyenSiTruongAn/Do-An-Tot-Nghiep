<Page x:Class="AppTinhLuong365.Views.DuLieuTinhLuong.ChamCong"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppTinhLuong365.Views.DuLieuTinhLuong"
      mc:Ignorable="d" 
      d:DesignHeight="813" d:DesignWidth="1042" Background="#F7F8FC"
      Title="ChamCong">

    <Grid>
        <StackPanel>
            <Border Margin="0 10 0 0">
                <DockPanel>
                    <Border Background="#ffff" BorderThickness="1" CornerRadius="10" Width="1032" Height="56">
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                <TextBlock Text="Home/" Margin="20 0 10 0 " Foreground="{DynamicResource #68798B}" VerticalAlignment="Center" FontSize="16" FontWeight="DemiBold" />
                                <TextBlock Text="Chấm công" VerticalAlignment="Center" FontSize="15" Foreground="blue" FontWeight="Bold"/>
                                <Path Data="{DynamicResource iconTamGiac}" Fill="{DynamicResource #2E3467}" VerticalAlignment="Center" Margin="10"></Path>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="180 0 0 0">
                                <StackPanel Width="83" Height="20" Margin="20 0 0 0">
                                    <TextBlock Text="Giới Thiệu" Foreground="{DynamicResource #68798B}" FontSize="16" FontWeight="Bold" />
                                </StackPanel>
                                <StackPanel Width="83" Height="20" Margin="20 0 0 0">
                                    <TextBlock Text="Hướng dẫn" Foreground="{DynamicResource #68798B}" FontSize="16" FontWeight="Bold" />
                                </StackPanel>

                                <StackPanel Width="83" Height="20" Margin="20 0 0 0">
                                    <TextBlock Text="Tin tức" Foreground="{DynamicResource #68798B}" FontSize="16" FontWeight="Bold" />
                                </StackPanel>

                                <Grid Width="40" Height="20">
                                    <Path Data="{DynamicResource notify}"  Fill="{DynamicResource #68798B}" Margin="0 0 0 0"></Path>
                                    <Path Data="{DynamicResource iconCirle}" Fill="red" Margin="5 -5 0 0"></Path>
                                    <Path Data="{DynamicResource iconCircel}" Fill="{DynamicResource #474747}" Margin="3 -6 0 -2"></Path>
                                </Grid>

                                <Grid Width="270" Height="20" Margin="20 0 20 0" >
                                    <TextBlock Text="Công ty thanh toán Hưng Hà" Foreground="{DynamicResource #68798B}" FontSize="16"  FontWeight="Bold"/>
                                    <Path Data="{DynamicResource iconTamGiac}" Fill="{DynamicResource #2E3467}" HorizontalAlignment="Right" Margin="0 0 20 0" VerticalAlignment="Center"></Path>
                                </Grid>
                            </StackPanel>
                        </StackPanel>

                    </Border>

                </DockPanel>

            </Border>

            <Border Background="#fff" BorderThickness="1" CornerRadius="10" Width="1032" Margin="0 60 0 0" BorderBrush="{DynamicResource #ebebeb}">
                <StackPanel Margin="10 0 10 0">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel HorizontalAlignment="Left">
                            <TextBlock Text="Bảng công 12/2020" FontSize="24" FontWeight="Bold" Foreground="#2E3467" />
                            <TextBlock Text="Nguyễn Trung Hiếu - Kỹ Thuật - Nhân Viên" FontSize="12" Foreground="#2E3467"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="80 0 0 0">
                            <TextBlock Text="Vui lòng chọn thông tin: " FontSize="15" FontWeight="Bold" Foreground="#2E3467" VerticalAlignment="Center" />
                            <Border CornerRadius="10" BorderThickness="1" Background="Transparent" Margin="10 0 0 0" BorderBrush="{DynamicResource #ebebeb}">
                                <StackPanel Orientation="Horizontal" >
                                    <TextBlock Text="Kỹ Thuật" Width="178" Height="38" FontSize="15" VerticalAlignment="Center" Margin="10 20 0 0"/>
                                    <Path Data="{DynamicResource iconTamGiac}" Fill="#68798B" VerticalAlignment="Center" Margin="0 0 20 0"></Path>
                                </StackPanel>
							</Border>
                            <Border CornerRadius="10" BorderThickness="1" Background="Transparent" Margin="10 0 0 0" BorderBrush="{DynamicResource #ebebeb}">
                                <StackPanel Orientation="Horizontal" >
                                    <TextBlock Text="Nguyễn Trung Hiếu" Width="178" Height="38" FontSize="15" VerticalAlignment="Center" Margin="10 20 0 0"/>
                                    <Path Data="{DynamicResource iconTamGiac}" Fill="#68798B" VerticalAlignment="Center" Margin="0 0 20 0"></Path>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </StackPanel>
                    
                    <DataGrid Width="1002" Height="642">
                        <DataGrid.Columns Width="1002" Height="55">
                            <DataGridTextColumn Header="Chủ Nhật" Width="143">
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Thứ Hai" Width="143">
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Thứ Ba" Width="143">
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Thứ Tư" Width="143">
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Thứ Năm" Width="143">
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Thứ Sáu" Width="143">
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Thứ Bảy" Width="143">
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</Page>
