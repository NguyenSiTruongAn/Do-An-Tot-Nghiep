<Page x:Class="AppTinhLuong365.Views.DuLieuTinhLuong.ThuongPhat"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AppTinhLuong365.Views.DuLieuTinhLuong"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1042" Background="{DynamicResource #ebebeb}"
      Title="ThuongPhat">

    <Grid>
        <StackPanel>
            <Border Background="#fff" CornerRadius="10" BorderThickness="1" BorderBrush="{DynamicResource #ebebeb}">
                <StackPanel>
                    <StackPanel>
                        <StackPanel HorizontalAlignment="Left" Margin="10 10 0 0">
                            <TextBlock Text="Danh sách thưởng phạt nhân viên tháng 8 năm 2022" FontSize="24" FontWeight="Bold" Foreground="#2E3467" />
                            <TextBlock Text="Quản lí theo dõi thưởng phạt nhân viên" FontSize="15" Foreground="{DynamicResource #68798B }" />
                        </StackPanel>
                        
                        <!-- seach-->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0 10 10 10">

                            <Border CornerRadius="10" BorderThickness="1" Background="Transparent" Margin="10 0 0 0" BorderBrush="{DynamicResource #ebebeb}" Width="178" Height="38">
                                <StackPanel Orientation="Horizontal" >
                                    <TextBlock Text="Tháng 8" FontSize="15" VerticalAlignment="Center" Margin="10 0 0 0"/>
                                    <Path Data="{DynamicResource iconSearch}" Fill="#68798B" VerticalAlignment="Center" Margin="20 0 20 0"></Path>
                                </StackPanel>
                            </Border>
                            <Border CornerRadius="10" BorderThickness="1" Background="Transparent" Margin="10 0 0 0" BorderBrush="{DynamicResource #ebebeb}" Width="178" Height="38">
                                <StackPanel Orientation="Horizontal" >
                                    <TextBlock Text="Năm 2022"  FontSize="15" VerticalAlignment="Center"  Margin="10 0 0 0"/>
                                    <Path Data="{DynamicResource iconSearch}" Fill="#68798B" VerticalAlignment="Center" Margin="20 0 20 0"></Path>
                                </StackPanel>
                            </Border>
                            <Border CornerRadius="10" BorderThickness="1" Background="Transparent" Margin="10 0 0 0" BorderBrush="{DynamicResource #ebebeb}" Width="178" Height="38">
                                <StackPanel Orientation="Horizontal" >
                                    <TextBlock Text="Phòng ban ( tất cả)"  FontSize="15" VerticalAlignment="Center" Margin="10 0 0 0" />
                                    <Path Data="{DynamicResource  iconSearch}" Fill="#68798B" VerticalAlignment="Center" Margin="20 0 20 0"></Path>
                                </StackPanel>
                            </Border>
                            <Border CornerRadius="10" BorderThickness="1" Background="Transparent" Margin="10 0 0 0" BorderBrush="{DynamicResource #ebebeb}"  Width="178" Height="38">
                                <StackPanel Orientation="Horizontal" >
                                    <TextBlock Text="Tất cả nhân viên" FontSize="15" VerticalAlignment="Center"  Margin="10 0 0 0"/>
                                    <Path Data="{DynamicResource  iconSearch}" Fill="#68798B" VerticalAlignment="Center" Margin="20 0 20 0"></Path>
                                </StackPanel>
                            </Border>
                            <Border Width="105" Height="40" Background="{DynamicResource #4C5BD4}" CornerRadius="10" Margin="10 0 0 0">
                                <TextBlock Text="Thống kê"  VerticalAlignment="Center" Margin="10" FontSize="16" Foreground="{DynamicResource #FFFFFF}" HorizontalAlignment="Center" />
                            </Border>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Background="{DynamicResource #4C5BD4}">
                            <TextBlock Text="Họ tên" Margin="30 26 0 13" Foreground="{DynamicResource #FFFFFF}" FontSize="15" FontWeight="Bold"></TextBlock>
                            <TextBlock Text="Tiền thưởng" Margin="130 26 0 13" Foreground="{DynamicResource #FFFFFF}" FontSize="15" FontWeight="Bold"></TextBlock>
                            <TextBlock Text="Tiền phạt" Margin="200 26 0 13" Foreground="{DynamicResource #FFFFFF}" FontSize="15" FontWeight="Bold"></TextBlock>
                            <TextBlock  Margin="230 26 0 13" Foreground="{DynamicResource #FFFFFF}" FontSize="15" FontWeight="Bold"></TextBlock>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
        
    </Grid>
</Page>
