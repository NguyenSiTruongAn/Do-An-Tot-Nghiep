<UserControl x:Class="AppTinhLuong365.Views.ChiTraLuong.Validation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AppTinhLuong365.Views.ChiTraLuong"
      mc:Ignorable="d">

    <Grid Width="300" Height="40">
        <Border Style="{StaticResource ShadowBorder2}"></Border>
        <Border Background="{DynamicResource #FFFFFF}" CornerRadius="8">
            <Grid VerticalAlignment="Center" Margin="5 5 5 0">
                <Path HorizontalAlignment="Left" Data="{DynamicResource iconThongTinTaoKhoan}"
                      Fill="{DynamicResource #F46A6A}">
                </Path>
                <TextBlock HorizontalAlignment="Right" Text="Bạn chắc chắn muốn xóa tùy chọn này?"
                           FontSize="15" FontFamily="roboto" FontWeight="DemiBold">
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>