<UserControl x:Class="AppTinhLuong365.Views.ChiTraLuong.Validation"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AppTinhLuong365.Views.ChiTraLuong"
      mc:Ignorable="d">

    <Grid Width="250" Height="40">
        <Border Style="{StaticResource ShadowBorder2}"/>
        <Border Background="{DynamicResource #FFFFFF}" CornerRadius="8" MouseLeftButtonDown="Tat">
            <Grid VerticalAlignment="Center" Margin="5 5 5 0">
                <Border CornerRadius="5" HorizontalAlignment="Left" Width="30" Height="30" Background="#ffffff">
                    <Path VerticalAlignment="Center" HorizontalAlignment="Center" Data="{DynamicResource iconThongBaoXoa}" Fill="#ffa300">
                    </Path>
                </Border>
                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="Lương trả không quá 100%"
                           FontSize="15" FontFamily="roboto" FontWeight="DemiBold">
                </TextBlock>
            </Grid>
        </Border>
    </Grid>
</UserControl>