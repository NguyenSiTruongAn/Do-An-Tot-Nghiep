                                <DataTemplate>
                                    <Border Background="Transparent">
                                        <TextBlock Text="{Binding display_luong_cb}"
                                                   Style="{StaticResource TextRowCenter}">
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="{DynamicResource textContract}">
