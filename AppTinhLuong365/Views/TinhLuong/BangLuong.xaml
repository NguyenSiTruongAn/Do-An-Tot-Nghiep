                                        <TextBlock Text="{Binding display_thuong}"
                                                   Style="{StaticResource TextRowCenter}">
                                        </TextBlock>
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="{DynamicResource textThuongNghiLe}">
